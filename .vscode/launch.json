{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Task Debug",
      "type": "lldb",
      "request": "launch",
      "args": ["logs/app.log", "INFO"],
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/build/Debug/bin/ConsoleApp",
      "preLaunchTask": "Build",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMap": {
        "/build": "${workspaceFolder}/build"}
    },
  ]
}